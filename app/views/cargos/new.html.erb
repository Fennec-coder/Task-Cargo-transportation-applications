<h2>Create a cargo for transportation </h2>
<%= form_for [@client, @request], html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :weight %>* <br>
    <%= f.text_field :weight, class: "form-control"%>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :length %>* <br>
    <%= f.text_field :length, class: "form-control"%>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :width %>* <br>
    <%= f.text_field :width, class: "form-control"%>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :height %>* <br>
    <%= f.text_field :height, class: "form-control"%>
  </div>
  <br>

  <div class="form-group">
    <p>Refers to the requests*</p><br>
    <%= f.collection_select :request_id, Request.where(client_id: current_client ),:id, :name, include_blank: true %>
  </div>
  <br>

  <%= f.submit "Sent", class: "btn btn-success"%>

<% end %>